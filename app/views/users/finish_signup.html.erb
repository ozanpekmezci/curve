<div id="add-information" class="container">
  <h1>Add Information</h1>
  <%= form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
    <% if @show_errors && current_user.errors.any? %>
      <div id="error_explanation">
        <% current_user.errors.full_messages.each do |msg| %>
          <%= msg %><br>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :user_name %>
      <div class="controls">
        <%= f.text_field :user_name, :autofocus => true, :value => '', class: 'form-control input-lg', required: true %>
       </div>
    </div>
    <div class="form-group">
      <%= f.label :country %><br />
      <%= f.text_field :country%>
    </div>

    <div class="form-group">
      <%= f.label :city %><br />
      <%= f.text_field :city%>
    </div>
    <div class="actions">
      <%= f.submit 'Continue', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
