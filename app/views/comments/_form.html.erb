<%= form_for([@post,@comment], remote: true) do |f| %>
  <div><%= hidden_field_tag :post_id, @post.id %></div>
  <div><%= hidden_field_tag :user_id, current_user.id %></div>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: 'form-control', required: true, cols: 3 %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price , cols: 3%>
  </div>

 <%= f.button "Supply", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"} %>
<% end %>
