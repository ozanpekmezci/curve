<% if user.likes?(post) %>
  <%= link_to post_like_path(post), method: :delete,remote: true do %>
     <i class="fa fa-heart"></i>
  <%end%>
<%else%>
  <%= link_to  post_like_path(post), method: :post,remote: true do%>
    <i class="fa fa-heart-o"></i>
  <%end%>
<%end%>

<%= post.likes.count %>

<% post.likes.each do |like| %>
  <%= image_tag like.user.avatar.url(:small_thumb), width: 20 %>
<% end %>
