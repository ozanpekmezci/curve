<%= form_for @post, {html: {multipart: true}},  remote: true do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div><%= hidden_field_tag :user_id, current_user.id%></div>
  <div><%= hidden_field_tag :lat %></div>
  <div><%= hidden_field_tag :lon %></div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', required: true, cols: 3  %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
<div class="field">
  <%= f.file_field :pictures, multiple: true %>
</div>
  <div class="form-group">
     <%= f.label :label_list %>
     <%= f.text_area :label_list, placeholder: "Tags separated with comma" %>
   </div>
  <div class="actions">
    <%= f.submit 'Demand', class: 'btn btn-primary'%>
  </div>
<% end %>
