<% if user_signed_in? %>
  <p id="notice"><%= notice %></p>

  <h1>Demands</h1>

  <div class = "panel panel-default" id ="posts">
    <div class "panel-body">
      <ul class= "media-list">
        <%= render @posts %>
      </ul>
    </div>
  </div>

  <br>

  <%= link_to 'New Demand', new_post_path, class: 'btn btn-primary btn-large', remote: true %>

  <div class= "new-post-form" style = "display:none">
  </div>

<% else %>
  <% content_for :top_content do %>
    <div class="jumbotron">
      <div class="container">
        <h1>Welcome!</h1>
        <p>Register to get started.</p>
        <p>
          <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
